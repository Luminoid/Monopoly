<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
          xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="gui.init.InitViewController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label text="玩家初始现金(默认为20000.0):">
            <GridPane.margin>
                <Insets left="8.0"/>
            </GridPane.margin>
        </Label>
        <Label text="游戏的开始时间:" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="8.0"/>
            </GridPane.margin>
        </Label>
        <Label text="游戏的结束时间:" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="8.0"/>
            </GridPane.margin>
        </Label>
        <Label text="玩家一的名称:" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets left="8.0"/>
            </GridPane.margin>
        </Label>
        <Label text="玩家二的名称:" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets left="8.0"/>
            </GridPane.margin>
        </Label>
        <Label text="玩家三的名称:" GridPane.rowIndex="5">
            <GridPane.margin>
                <Insets left="8.0"/>
            </GridPane.margin>
        </Label>
        <Label text="玩家四的名称:" GridPane.rowIndex="6">
            <GridPane.margin>
                <Insets left="8.0"/>
            </GridPane.margin>
        </Label>
        <DatePicker fx:id="beginDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <DatePicker fx:id="endDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <TextField fx:id="cashTxt" GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets right="8.0"/>
            </GridPane.margin>
        </TextField>
        <TextField fx:id="playerATxt" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets right="8.0"/>
            </GridPane.margin>
        </TextField>
        <TextField fx:id="playerBTxt" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets right="8.0"/>
            </GridPane.margin>
        </TextField>
        <TextField fx:id="playerCTxt" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <GridPane.margin>
                <Insets right="8.0"/>
            </GridPane.margin>
        </TextField>
        <TextField fx:id="playerDTxt" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <GridPane.margin>
                <Insets right="8.0"/>
            </GridPane.margin>
        </TextField>
        <Label fx:id="promptLabel" textAlignment="CENTER" textFill="#ff3b30" GridPane.columnSpan="2" GridPane.halignment="CENTER"
               GridPane.rowIndex="7"/>
        <Button fx:id="startBtn" mnemonicParsing="false" onAction="#handleStartBtn" text="开始游戏" GridPane.columnSpan="2"
                GridPane.halignment="CENTER" GridPane.rowIndex="8"/>
    </children>
